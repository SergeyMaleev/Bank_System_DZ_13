<Page x:Class="BankSystem.View.Client.CreditRegistrationLuckWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BankSystem.View.Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding Source={StaticResource vmLocator}, Path =CreditRegistrationLuckWindowViewModel}"
      Title="CreditRegistrationOk">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Поздравляем кредит успешно оформлен" FontSize="28" Foreground ="Green" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="не забывайте оплачивать кредит, что бы избежать начисления пени" Margin="5" HorizontalAlignment="Center"/>
            <Button Content="На главную" HorizontalAlignment="Center" Width="150" Command="{Binding BackCommand}"/>
        </StackPanel>
    </Grid>
</Page>
